@page
@model Dirarys_Final_Project.Pages.Characters.EditModel

@{
    ViewData["Title"] = "Edit";
}

<body class="bg-secondary bg-dark text-white">
<h1>Edit Character</h1>
<hr color="white" />
<div class="row">
    <div class="col-md-4">
        <!-- Character edit form. -->
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Character.CharacterID" />
            <div class="form-group">
                <label asp-for="Character.Name" class="control-label"></label>
                <input asp-for="Character.Name" class="form-control" />
                <span asp-validation-for="Character.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Age" class="control-label"></label>
                <input asp-for="Character.Age" class="form-control" />
                <span asp-validation-for="Character.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Height" class="control-label"></label>
                <input asp-for="Character.Height" class="form-control" />
                <span asp-validation-for="Character.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Weight" class="control-label"></label>
                <input asp-for="Character.Weight" class="form-control" />
                <span asp-validation-for="Character.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Race" class="control-label"></label>
                <input asp-for="Character.Race" class="form-control" />
                <span asp-validation-for="Character.Race" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Specialization" class="control-label"></label>
                <input asp-for="Character.Specialization" class="form-control" />
                <span asp-validation-for="Character.Specialization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.LandID" class="control-label"></label>
                <select asp-for="Character.LandID" class="form-control" asp-items="ViewBag.LandID"></select>
                <span asp-validation-for="Character.LandID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.GuildID" class="control-label"></label>
                <select asp-for="Character.GuildID" class="form-control" asp-items="ViewBag.GuildID"></select>
                <span asp-validation-for="Character.GuildID" class="text-danger"></span>
            </div>
            <!-- Save edited character. -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <!-- Return to character list. -->
    <u><a class="text-white" asp-page="./Index">Back to List</a></u>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
