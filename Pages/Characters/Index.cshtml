@page
@model Dirarys_Final_Project.Pages.Characters.IndexModel

@{
    ViewData["Title"] = "Character Info";
}

<h1>Character Info</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-center">
                @{
                    var firstSort = "name_asc";
                    if (Model.CurrentSort == "name_asc")
                    {
                        firstSort = "name_desc";
                    }
                }
                <a asp-page="./Index" asp-route-CurrentSort="@firstSort" asp-route-PageNum="@(Model.PageNum)">@Html.DisplayNameFor(model => model.Character[0].Name)</a>
            </th>
            <th class="text-center">
                @{
                    var secondSort = "age_asc";
                    if (Model.CurrentSort == "age_asc")
                    {
                        secondSort = "age_desc";
                    }
                }
                <a asp-page="./Index" asp-route-CurrentSort="@secondSort" asp-route-PageNum="@(Model.PageNum)">@Html.DisplayNameFor(model => model.Character[0].Age)</a>
            </th>
            <th class="text-center">
                @{
                    var thirdSort = "height_asc";
                    if (Model.CurrentSort == "height_asc")
                    {
                        thirdSort = "height_desc";
                    }
                }
                <a asp-page="./Index" asp-route-CurrentSort="@thirdSort" asp-route-PageNum="@(Model.PageNum)">@Html.DisplayNameFor(model => model.Character[0].Height)</a>
            </th>
            <th class="text-center">
                @{
                    var fourthSort = "weight_asc";
                    if (Model.CurrentSort == "weight_asc")
                    {
                        fourthSort = "weight_desc";
                    }
                }
                <a asp-page="./Index" asp-route-CurrentSort="@fourthSort" asp-route-PageNum="@(Model.PageNum)">@Html.DisplayNameFor(model => model.Character[0].Weight)</a>
            </th>
            <th class="text-center">
                 @{
                    var fifthSort = "race_asc";
                    if (Model.CurrentSort == "race_asc")
                    {
                        fifthSort = "race_desc";
                    }
                }
                <a asp-page="./Index" asp-route-CurrentSort="@fifthSort" asp-route-PageNum="@(Model.PageNum)">@Html.DisplayNameFor(model => model.Character[0].Race)</a>
            </th>
            <th class="text-center">
                @{
                    var sixthSort = "spec_asc";
                    if (Model.CurrentSort == "spec_asc")
                    {
                        sixthSort = "spec_desc";
                    }
                }
                <a asp-page="./Index" asp-route-CurrentSort="@sixthSort" asp-route-PageNum="@(Model.PageNum)">@Html.DisplayNameFor(model => model.Character[0].Specialization)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Character) {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Race)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td class="text-center">
                <a asp-page="./Edit" asp-route-id="@item.CharacterID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CharacterID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CharacterID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<hr />
@{
    var prevDisabled= "";
    if (Model.PageNum <= 1)
    {
        prevDisabled = "disabled";
    }
}
@{
    var nextDisabled= "";
    if (Model.PageSize < 10)
    {
        nextDisabled = "disabled";
    }
}
<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item @prevDisabled"><a class="page-link" asp-page="./Index" asp-route-PageNum="@(Model.PageNum - 1)" asp-route-CurrentSort="@(Model.CurrentSort)">Previous</a></li>
    <li class="page-item @nextDisabled"><a class="page-link" asp-page="./Index" asp-route-PageNum="@(Model.PageNum + 1)" asp-route-CurrentSort="@(Model.CurrentSort)">Next</a></li>
  </ul>
</nav>
