@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body class="bg-secondary text-center bg-dark text-white">
    <!-- Title of home page. -->
    <h1 class="display-3 font-weight-bold font-italic">Builds of Dirarys</h1>
    <br>
    <!-- Grid for text content and image. -->
    <div class="row">
        <div class="col-6 mb-2 border-top border-white text-center">
            <p class="pt-3 font-weight-bold">
                This website will help you plan a build for the RPG called Dirarys!
            </p>
        </div>
        <div class="col-6 mb-2 border-top border-white text-center">
            <p class="pt-3 font-weight-bold">
