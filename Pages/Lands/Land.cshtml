@page
@model LandModel
@{
    ViewData["Title"] = "Lands";
}

<body class="bg-secondary bg-dark text-center text-white">
    <h1>@ViewData["Title"]</h1>

    <h5>Click on a land to see the characters that call it home!</h5>
    <br>
    <!-- Table to display all lands in database -->
    <div class="border border-white">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="text- center text-white">Land</th>
                    <th scope="col" class="text- center text-white">Climate</th>
                    <th scope="col" class="text- center text-white">Government</th>
                </tr>
            </thead>
            <tbody>
                <!-- Displays land information for each land. -->
                @foreach (var l in Model.Lands)
                {
                    <tr>
                        <td><a class="text- center text-white" asp-page="./SpecificLand" asp-route-id="@l.LandOfOriginID">@Html.DisplayFor(LandStat => l.Name)</a></td>
                        <td class="text- center text-white">@Html.DisplayFor(LandStat => l.Climate)</td>
                        <td class="text- center text-white">@Html.DisplayFor(LandStat => l.GoverningType)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>